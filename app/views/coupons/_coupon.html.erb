  <div id="coupon">
  <h2> <%= coupon.name %> </h2>
  <h3> Expires: <%= coupon.expires_on %></h3>
  <% if current_user.admin? %>
  <%= link_to "edit", edit_coupon_path(:id => coupon.id),
                                :title => "Edit #{coupon.name}" %>
  <%= link_to "delete", coupon, :method => :delete, :confirm => "Delete this coupon?",
                                :title => "Delete #{coupon.name}", :remote=>:true, :class=>"alert" %>                              
  <%= link_to "print", print_coupon_path(:id => coupon.id), :rel => "facebox", :method => :print, :title => "Print #{coupon.name}", :remote=>:true, :class=>"alert" %> 
  <% end %>
  </div>
 
